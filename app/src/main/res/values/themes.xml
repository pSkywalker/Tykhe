<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- splash screen -->
    <style name="Theme.Tykhe.Spashscreen.Main" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/app_logo</item>
        <item name="windowSplashScreenAnimationDuration">200</item>

        <item name="postSplashScreenTheme">@style/Theme.Tykhe</item>
    </style>
    <!-- splash screen -->
    <style name="Theme.Tykhe.Spashscreen.OnBoarding" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/app_logo</item>
        <item name="windowSplashScreenAnimationDuration">200</item>

        <item name="postSplashScreenTheme">@style/Theme.Tykhe.onBoardingForm</item>
    </style>

    <style name="Theme.Tykhe.onBoardingForm" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textColorHint">@color/on_boarding_edit_text_hint_color</item>
       <!--
        <item name="colorPrimary">#f12</item>
        <item name="colorSecondary">#f12</item>
        -->

        <!-- Status bar color. -->
        <!-- item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item -->
        <!-- Customize your theme here. -->

        <!--item name="android:buttonStyle">@style/on_boarding_form_button</item-->
    </style>

    <!-- Base application theme. -->
    <style name="Theme.Tykhe" parent="Theme.MaterialComponents.Light.NoActionBar">


        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>


        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!--item name="android:buttonStyle">@style/on_boarding_form_button</item-->
    </style>

    <style name="Theme.Tykhe.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Tykhe.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="Theme.Tykhe.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>