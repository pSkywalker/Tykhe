<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="onBoardingForm"
            type="com.app.tykhe.viewModels.UserOnBoardingViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/weeklyButton"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="250dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            android:onClick="@{(view)->onBoardingForm.selectWeekly()}"
            >
    <!-- TODO -->
            <!-- data bind different style for selected -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weekly" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/biWeeklyButton"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="250dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="@{(view)->onBoardingForm.selectBiWeekly()}"
            >


            <!-- TODO -->
            <!-- data bind different style for selected -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/biWeekly" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/monthlyButton"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="250dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="@{(view)->onBoardingForm.selectMonthly()}"
            >

            <!-- TODO -->
            <!-- data bind different style for selected -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/monthly" />

        </LinearLayout>

        <EditText
            android:id="@+id/input_contributionAmount"
            android:inputType="numberDecimal"
            android:text="@={``+onBoardingForm.accountOnBoarding.contributionAmount}"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/input_interestRate"
            android:inputType="numberDecimal"
            android:text="@={``+onBoardingForm.accountOnBoarding.intrestRate}"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <SeekBar
            android:id="@+id/input_durationSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="370dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:max="100"

            android:progress="@={onBoardingForm.accountOnBoarding.lengthOfInvestment}"
            />

        <Button
            android:id="@+id/button_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            android:onClick="@{(view) -> onBoardingForm.start() }"

            android:clickable="@{onBoardingForm.accountOnBoarding.contributionAmount > 0 ? true : false &amp; onBoardingForm.accountOnBoarding.intrestRate > 0 ? true : false }"


            />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_start"
            app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24"

            android:onClick="@{ (view) -> onBoardingForm.previousPage() }"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>




</layout>